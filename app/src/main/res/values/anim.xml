<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NopAnim">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="FadeAnim">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

    <style name="PopAnim">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>

    <style name="SlideAnim">
        <item name="android:windowEnterAnimation">@anim/anim_right_in</item>
        <item name="android:windowExitAnimation">@anim/anim_right_out</item>
    </style>

    <style name="ExplodeAnim">
        <item name="android:windowEnterAnimation">@anim/anim_explode_in</item>
        <item name="android:windowExitAnimation">@anim/anim_explode_out</item>
    </style>
</resources>